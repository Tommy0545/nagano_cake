<div class="container">
      <h3>商品一覧（全<%= @items_count %>件）</h3>
     
        <div class="row">
          <% @items.each do |item| %>
            <div class="col-md-3">
              <%= link_to public_item_path(item.id) do %>
                <div class="m-3"><%= image_tag item.image, size: "200x200" %></div>
                <div class="m-3"><%= item.name %></div>
                <div class="m-3">￥<%= item.price %></div>
              <% end %>
            </div>
          <% end %>
        </div>
      <div class="mx-auto" style="width: 200px;">
        <%= paginate @items %>
      </div>
</div>