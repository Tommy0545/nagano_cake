
 <h4>ショッピングカート</h4>

  <%= link_to "カートを空にする", public_destroy_all_path, method: :delete %>
 
      <p>
       商品名
       単価(税込)
       数量
       小計
       </p>
      
 <% @total =0 %>
 
 <% @cart_item.each do |cart_item| %>
  <%= cart_item.item.name %>
  <%= cart_item.item.with_tax_price.to_s(:delimited) %>
  <%= form_with model:@cart_item,url: public_cart_item_path(cart_item.id), local:true do |f| %>
   <%= f.select :amount, *[1..10] %>
   <%= f.submit '変更' %>
  <% end %>
  <%= cart_item.subtotal.to_s(:delimited)%>
  <%= @total += cart_item.subtotal %>
  <%= link_to "削除する",public_cart_item_path(cart_item),method: :delete , "data-confirm" => "本当に削除しますか？" %> 
 <% end %>

<p>合計金額 ￥<%= @total .to_s(:delimited)%></p>
