 <% if @item.errors.any? %>
  <%= @item.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 
<h3 class="m-5">商品新規登録</h3>
<div class="mx-auto" style="width: 700px;">
  <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
   
    <div class="my-4">
      <span class="mx-5"><%= f.label :image, "商品画像" %></span>
      <%= f.file_field :image, accept:"image/*" %>
    </div>
    <%= f.hidden_field :image_id %>
    <div class="my-4">
      <span class="mx-5"><%= f.label :name, "商品名　" %></span>
      <%= f.text_field :name, size:47 %>
    </div>
    <div class="my-4">
      <span class="mx-5"><%= f.label :introduction, "商品説明" %></span>
      <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
    </div>
    <div class="my-4">
      <span class="mx-5"><%= f.label :genre_id, "ジャンル" %></span>
      <%= f.collection_select(:genre_id, Genre.all, :id, :name, {include_blank: "--選択してください--"}) %>
    </div>
    <div class="my-4">
      <span class="mx-5"><%= f.label :price, "税抜価格" %></span>
      <%= f.text_field :price, size:47 %>円
    </div>

    <div class="my-4">
     <span class="mx-5"><%= f.label :販売ステータス %></span>
        <span class="mx-5"><%= f.radio_button :is_active, :true %>販売中</span>
        
        <span class="mx-5"><%= f.radio_button :is_active, :false %>販売中止</span>
    </div>
    
     <div class="mx-5">
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
