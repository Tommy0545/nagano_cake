<h3><%= @customer.last_name%><%= @customer.first_name %>さんの会員情報編集</h3>

<%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
    <p>
      会員ID
      <%= @customer.id %>
    </p>
      
    <p>
      <%= f.label :氏名 %>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </p>
    <p>
      <%= f.label :フリガナ %>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </p>
    <p><%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %></p>
    <p>
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </p>
    
    <p>
      <%= f.label :電話番号 %>
      <%= f.text_field :telephone_number %>
    </p>
    <p>
      <%= f.label :メールアドレス %>
      <%= f.email_field :email %>
    </p>
    <p>
      <%= f.label :会員ステータス %>
      <%= f.radio_button :is_active,false,checked:true %>
      <%= f.label :有効 %>
      <%= f.radio_button :is_active,true %>
      <%= f.label :退会 %>
    </p>
    <p><%= f.submit "変更を保存", class: "btn btn-success" %></p>
    
<% end %>