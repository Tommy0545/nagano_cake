<h1>会員一覧</h1>

<p>会員ID</p>
<p>氏名</p>
<p>メールアドレス</p>
<p>ステータス</p>


<% @customers.each do |customer| %>

    <p><%= customer.id %></p>
    
    <p><%= link_to "#{customer.last_name}#{customer.first_name}" ,admin_customer_path(customer) %></p>
    
    <p><%= customer.email %></p>
    
    <p><% if customer.is_deleted == false %></p>
    <p><%= customer.is_deleted = "有効" =%></p>
       <% else %>
    <p><%= customer.is_deleted = "無効" =%></p>
        <% end %>
    
<% end %>
        
