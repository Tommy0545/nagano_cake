<h3>注文履歴一覧</h3>

  <p>購入日時</p>
  <p>購入者</>
  <p>注文個数</p>
  <p>注文ステータス</p>
  
  
<% @orders.each do |order| %>
      
  <%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %>
  <%= order.customer.full_name %>
  <%= order.order_details.sum(:quantity) %><!-- 特定カラムの合計値 -->
  <%= order.status_i18n %><!-- 注文ステータスの日本語化 -->
  
<% end %>